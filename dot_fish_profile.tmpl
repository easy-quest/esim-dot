function gp
    set text (uname --operating-system), (date)
    git add -A;git commit -m "$text";git push $argv;
end

function venv
  python -m venv .venv $argv;
  .venv/bin/python -m pip install -U pip setuptools wheel pip-tools yapf autoflake isort coverage $argv;
end

function envrc
  printf "#!/usr/bin/env bash \nsource .venv/bin/activate" > .envrc;direnv allow
end 

abbr pi ".venv/bin/python -m pip install -U $argv"
abbr rm "rm -Rf $argv"
abbr xx "chmod +x $argv"

function ff --description 'Like ** but only returns plain files.'
    # This also ignores .git directories.
    find . \( -name .git -type d -prune \) -o -type f | \
        sed -n -e '/^\.\/\.git$/n' -e 's/^\.\///p'
end


